
<form action=<%= url %> method="POST">
  <input type="hidden" name="_method" value=<%= method %>>

  <%= auth_token %>

  <label for="name">Name: </label>
  <input type="text"
         name="track[name]"
         id="name"
         value="<%= track.name %>">
  <br>

  <label for="track_style">Style:</label>
  <select name="track[track_style]" id="track_style">
    <option></option>
    <% Track::TRACK_STYLE.each do |style| %>
      <option
        <%= track.track_style == style ? "selected" : "" %>
        value="<%= style %>">
        <%= style %>
      </option>
    <% end %>
  </select>
  <br>

  <input type="submit">
</form>